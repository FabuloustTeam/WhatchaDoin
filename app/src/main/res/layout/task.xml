<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/backgroundtask"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp"
    android:layout_height="100dp">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="30dp"
        android:layout_height="wrap_content">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/chkComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.google.android.material.checkbox.MaterialCheckBox>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="32dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDate"
            android:textSize="16sp"
            android:textColor="@color/textTaskDate"
            android:layout_marginTop="8dp"
            android:text="25/12/2020"
            android:gravity="right"
            android:textAlignment="gravity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="200sp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNameTask"
            android:textSize="18sp"
            android:textColor="@color/textTaskName"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:text="name task"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="35dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imgbtnImportant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/star" />
    </LinearLayout>

</LinearLayout>